---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
---

<Layout title="Events">
  <Container class="w-full">
    <Sectionhead>
      <Fragment slot="title">Events</Fragment>
      <Fragment slot="desc">
        Discover our upcoming public events. Become a member to see private events.
      </Fragment>
    </Sectionhead>

    <div class="flex justify-center mt-12">
      <a data-label="Public Event Calendar Sign Up" style="background-color:#e51f5d;color:#ffffff;min-width:128px;padding:8px 16px;border-radius:8px;text-align:center;font-weight:bold;text-decoration:none;display:inline-block;" href="https://lu.ma/the-space-events" target="_blank" rel="no referrer noopener">Subscribe to The Space's Public Event Calendar</a>
    </div>

    <!-- Responsive container for the iframe with padding on larger screens -->
    <div class="iframe-container mt-12 mb-20 lg:px-16">
      <iframe
        src="https://lu.ma/embed/calendar/cal-UDDTjyTDkwIZTOm/events"
        class="calendar-iframe"
        allowfullscreen=""
        aria-hidden="false"
        tabindex="0"
      ></iframe>
    </div>
  </Container>
</Layout>

<style>
  /* Base styles for the iframe */
  .calendar-iframe {
    width: 100%;
    height: 90vh;
    border: 1px solid #bfcbda88;
    border-radius: 4px;
  }

  /* Padding on the left and right for larger screens */
  @media (min-width: 1024px) {
    .iframe-container {
      padding-left: 180px;
      padding-right: 180px;
    }
  }
</style>