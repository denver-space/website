              <div class="step-circle">
                <span class="step-number">10</span>
              </div>
              <div class="step-content">
                <h3 class="step-title">Launch Week</h3>
                <div class="step-description">
                  <p>Lease Signed, Opening Event & Launch Week</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

  <div class="volunteer-section text-center bg-black py-10">
    <h2 class="mt-20 text-4xl font-bold text-white">Founding Volunteers</h2>
    <p class="mt-4 px-10 text-center text-gray-200">Cheers to all the amazing bitcoiners across the Rocky Mountain region who helped bring this together.</p>
    <div class="mt-20 volunteer-container">
      {publishedVolunteers.map((volunteerEntry) => (
        <div class="volunteer mt-4">
          <img 
            src={volunteerEntry.data.avatar.src} 
            alt={volunteerEntry.data.avatar.alt} 
            loading="lazy" 
            class="h-24 w-24 object-cover rounded-full border-2 border-white shadow-md"
            width="96"
            height="96"
          />
          <p class="text-white mt-2">{volunteerEntry.data.name}</p>
        </div>
      ))}
    </div>

    <!-- Get Involved Section -->
    <div class="mt-16 mb-4 mx-auto max-w-4xl px-5">
      <div class="text-center">
        <h2 class="text-4xl font-bold text-white mb-6">Get Involved</h2>
        <p class="text-lg text-gray-200 mb-8">
          Want to be a part of our journey? <br/>Explore different ways to get involved.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <Link href="/membership" block style="inverted" class="flex items-center justify-center">Become a Member</Link>
          <Link href="/sponsors" block style="inverted" class="flex items-center justify-center">Support Us</Link>
          <Link href="https://donate.denver.space" target="_blank" block style="inverted" class="flex items-center justify-center">Donate</Link>
        </div>
      </div>
    </div>
  </div>
</Layout>